@model Camping.Models.Utilisateur

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inscription</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="container">
            <div class="page-header">
                <h3>Inscription</h3>
            </div>
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Nom:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nom_user, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nom_user, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Prénom:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.prenom_user, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.prenom_user, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.mail_user, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.mail_user, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Mot de passe:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.motdepasse_user, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.motdepasse_user, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Connexion <span class="glyphicon glyphicon-thumbs-up"></span></button>
                    </div>
                </div>
            </div>
        </div>
            }

</body>
</html>
